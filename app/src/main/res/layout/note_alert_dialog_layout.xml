<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_round_corner_cardview"
        >
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_marginBottom="@dimen/_4dp"
                />
            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert Title Goes Here"
                android:textSize="@dimen/_18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_2dp"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                app:layout_constraintStart_toStartOf="@id/appTitle"
                />
            <TextView
                android:id="@+id/alertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_of_note"
                android:textSize="@dimen/_12sp"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/_2dp"
                app:layout_constraintTop_toBottomOf="@id/alertTitle"
                app:layout_constraintStart_toStartOf="@id/appTitle"
                />
            <TextView
                android:id="@+id/alert_off_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sp"
                android:text="Turn Off"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/alertMessage"
                app:layout_constraintEnd_toEndOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>